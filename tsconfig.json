{
    "compilerOptions": {
        "incremental": true,
        "target": "ES6",
        "jsx": "preserve",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDirs": [
            "./src",
            "./page",
            "./public"
        ],
        "outDir": "./dist",
        "resolveJsonModule": true,
        "allowJs": true,
        "declaration": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "page/*.tsx",
        "public/**/*.tsx",
        "public/images/custom.d.ts",
        "public/images/*.svg",
        "public/images/*.png"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}